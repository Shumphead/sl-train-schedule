<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aselalee.trainschedule"
    android:versionCode="109"
    android:versionName="1.09" >

    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:debuggable="false" >

        <activity
            android:label="@string/user_input"
            android:name=".TrainScheduleActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="keyboardHidden|orientation" >
        </activity>

        <activity
            android:label="@string/results"
            android:name=".ResultViewActivity" 
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:label="@string/app_name"
            android:name=".TabHostActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/history"
            android:name=".HistoryActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="keyboardHidden|orientation" >
        </activity>

        <activity
            android:label="@string/favourites"
            android:name=".FavouritesActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:label="@string/results_web_view"
            android:name=".ResultViewActivityWebView"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="keyboardHidden|orientation">
        </activity>

    </application>

</manifest>