<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#e0e0e0"
                android:endColor="#cfcfcfcf"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#D8731F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#e0e0e0"
                android:startColor="#cfcfcfcf"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#D8731F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#e0e0e0"
                android:startColor="#cfcfcfcf"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#D8731F" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>