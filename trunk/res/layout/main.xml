<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" > 
    	<LinearLayout
            android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:orientation="vertical" >
    		<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="@string/stations_from" />
    		<Spinner
        		android:id="@+id/station_from"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" />
    		<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="@string/stations_to" />
    		<Spinner
        		android:id="@+id/station_to"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" />

   			<TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/times_from" />
    		<Spinner
        		android:id="@+id/times_from"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" />
    		<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:text="@string/times_to" />
    		<Spinner
        		android:id="@+id/times_to"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content" />
    		<Button
        		android:id="@+id/submit"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="Get Schedule" />
    	</LinearLayout>
    </ScrollView>

</LinearLayout>