<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center" >
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/results_view_details_dialog_backgroud"
        android:layout_gravity="center"
        android:padding="5dp" >
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" >
            <TextView
                android:id="@+id/result_table_details_arr_at_start_txt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:background="#000000"
                android:layout_margin="1dp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/result_table_details_arr_at_start_val"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:background="#000000"
                android:layout_margin="1dp"
                android:gravity="center_vertical" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" >
            <TextView
                android:id="@+id/result_table_details_depart_from_start_txt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:background="#000000"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/result_table_details_depart_from_start_val"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#D8731F"
                android:padding="5dp"
                android:background="#000000"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="16sp" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" >
            <TextView
                android:id="@+id/result_table_details_reach_dest_txt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:background="#000000"
                android:layout_margin="1dp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/result_table_details_reach_dest_val"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:background="#000000"
                android:layout_margin="1dp"
                android:gravity="center_vertical" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" >
            <TextView
                android:id="@+id/result_table_details_freq_txt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:background="#000000"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/result_table_details_freq_val"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:background="#000000"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:gravity="center_vertical" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" >
            <TextView
                android:id="@+id/result_table_details_dur_txt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:background="#000000"
                android:layout_margin="1dp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/result_table_details_dur_val"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:background="#000000"
                android:layout_margin="1dp"
                android:gravity="center_vertical" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" >
            <TextView
                android:id="@+id/result_table_details_final_dest_txt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:background="#000000"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/result_table_details_final_dest_val"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:background="#000000"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center_vertical" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" >
            <TextView
                android:id="@+id/result_table_details_train_type_txt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:background="#000000"
                android:layout_margin="1dp"
                android:gravity="center_vertical" />
            <TextView
                android:id="@+id/result_table_details_train_type_val"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/dummy"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:background="#000000"
                android:layout_margin="1dp"
                android:gravity="center_vertical" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button 
                android:id="@+id/result_table_details_ok_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/results_view_details_dialog_back_btn"
                android:layout_gravity="center"
                android:layout_span="2" />
        </TableRow>
    </TableLayout>
</LinearLayout>
